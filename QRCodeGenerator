#first we go to the terminal section and write: pip install qrcode Image
import qrcode

def generate_qrcode(text):
    qr = qrcode.QRCode(
        version = 1,
        error_correction=qrcode.constants.ERROR_CORRECT_L,
        box_size=10,
        border=4,
    )
    qr.add_data(text)
    qr.make(fit = True)
    img = qr.make_image(fill_color="black", back_color="white")
    img.save("QR_CODE.png")

link = input("Enter your web-site link:")
generate_qrcode(link)
print("That's it. Your QR code is now in your directory folder named QR_CODE.png")
